      .navbar-inner
        a.brand(href='/') AggroCraig
        ul.nav
          li.active
            a(href='/') Home
          li
            a(href='/about') About
          li
            a(href='/contact') Contact
    .container-fluid
      .span3
        form#search
          input#query(type='text')
