    script(id='list-item-template', type='text/template')
      li(data-url!='<%= url %>')
        span(style='float: right;') <%= date %>
        strong <%= title %>
        p <%= location %>
    script(id='detail-template', type='text/template')
      h1 <%= title %>
      br
      span <%= date %>
      br
      span
        <% if ('undefined' !== typeof email) { %>
        a(href!='mailto:<%= email %>') <%= email %>
        <% } else { %>
        <%= replyTo %>
        <% } %>
      br
      br
      <%= body %>
    title Aggro Craig
  body
