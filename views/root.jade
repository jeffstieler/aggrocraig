html
  head
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/jquery-1.7.2.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/js/underscore-min.js')
